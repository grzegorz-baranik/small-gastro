{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File \".claude\\hooks\\pre-bash.ps1\" \"$CLAUDE_TOOL_INPUT\""
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File \".claude\\hooks\\pre-file-write.ps1\" \"$CLAUDE_TOOL_INPUT\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File \".claude\\hooks\\post-file-write.ps1\" \"$CLAUDE_FILE_PATHS\""
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File \".claude\\hooks\\post-bash.ps1\" \"$CLAUDE_TOOL_INPUT\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -ExecutionPolicy Bypass -File \".claude\\hooks\\on-stop.ps1\""
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(npx:*)",
      "Bash(pip install:*)",
      "Bash(pip3 install:*)",
      "Bash(poetry:*)",
      "Bash(python -m pytest:*)",
      "Bash(pytest:*)",
      "Bash(python -m py_compile:*)",
      "Bash(python -c:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(docker compose:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push origin:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(git branch:*)",
      "Bash(git stash:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git worktree:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(alembic:*)",
      "Bash(python -m alembic:*)",
      "Bash(make:*)",
      "Bash(ruff:*)",
      "Bash(black:*)",
      "Bash(eslint:*)",
      "Bash(prettier:*)",
      "Bash(psql:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(jq:*)",
      "Bash(timeout:*)",
      "Read(*)",
      "Write(./**)",
      "Edit(./**)"
    ],
    "deny": [
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(sudo:*)",
      "Bash(rm -rf /*)",
      "Write(../**)",
      "Write(/etc/**)",
      "Write(/usr/**)",
      "Write(~/**)"
    ]
  }
}
